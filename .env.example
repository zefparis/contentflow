# --- Database ---
DATABASE_URL=sqlite:///./local.db
# Example for Postgres in docker-compose
# DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/contentflow

# Server
PORT=8000
CORS_ORIGINS=*

# --- Object Storage (S3-compatible) ---
S3_BUCKET=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_REGION=us-east-1

# --- Base URLs ---
AFFIL_BASE_URL=https://example.com
APP_BASE_URL=http://localhost:5000
PUBLIC_BASE_URL=http://localhost:5000

# --- JWT / Session ---
JWT_SECRET=change_me_secret
SESSION_SECRET=change_me_session
ADMIN_SECRET=change_me_admin

# --- SerpAPI ---
SERPAPI_KEY=
SERPAPI_HL=fr
SERPAPI_GL=FR
SERPAPI_CACHE_TTL=3600
SERPAPI_MAX_RESULTS=10

# --- Meta / Instagram Graph API ---
META_APP_ID=
META_APP_SECRET=
META_VERIFY_TOKEN=change_me
META_GRAPH_VERSION=v21.0
META_SCOPES=pages_show_list,pages_read_engagement,instagram_basic,instagram_content_publish
META_REDIRECT_URI=

# --- AI Orchestrator / Autopilot ---
FEATURE_AUTOPILOT=false
FEATURE_RISKBOT=false
FEATURE_SUPPORTBOT=false

AI_TICK_INTERVAL_MIN=10
AI_MAX_ACTIONS_PER_TICK=5
AI_CONFIDENCE_THRESHOLD=0.55
AI_DRY_RUN=false
AI_OBJECTIVE=revenue_ctr_safe
AI_LOOKBACK_DAYS=7
AI_MIN_CTR=0.008
AI_MIN_QUALITY=0.70
AI_MAX_RISK=0.20

# --- Partner / Payouts ---
PAYOUT_MIN_EUR=10.0
PAYOUT_RESERVE_PCT=0.30
PAYOUT_RELEASE_DAYS=30
PAYOUT_WEEKDAY=1
PAYOUT_APPROVAL_THRESHOLD_EUR=200.0
PAYOUT_METHODS=paypal,bank

# --- Offers / Revshare ---
DEFAULT_EPC_EUR=0.25
OFFER_MODE=cpc_dynamic
CPC_DEFAULT_EUR=0.10
CPC_MIN_EUR=0.06
CPC_MAX_EUR=0.12
CPC_SAFETY_MARGIN_EUR=0.05
REVSHARE_BASE_PCT=0.40

# --- Affiliate ---
AFF_DEFAULT_CURRENCY=EUR
AFF_ACCEPT_PENDING=true
AFF_MAX_AGE_DAYS=45
AFF_SUBID_FORMAT=pid:aid:clk
AFF_ALLOWLIST_IPS=

# --- Risk Management ---
RISK_VELOCITY_MAX_CLICKS_10M=40
RISK_HOLD_DAYS=30

# --- Ticket System ---
TICKET_AUTO_CLOSE_DAYS=5

# --- Brevo / Email ---
BREVO_API_KEY=
EMAIL_FROM=noreply@contentflow.app
EMAIL_FROM_NAME=ContentFlow

# --- Supadata ---
SUPADATA_API_KEY=

# --- Stripe ---
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# --- BYOP Features ---
FEATURE_BYOP=false
FEATURE_BYOP_PUBLISH=false
BYOP_DEFAULT_REVSHARE_PCT=0.40
BYOP_PUBLISH_PLATFORMS=youtube,pinterest,reddit,instagram

# --- Sharing Kit ---
SHARE_EMAIL_ENABLED=true
SHARE_EMAIL_DAILY_LIMIT=200
SHAREKIT_DEFAULT_HASHTAGS=

# --- Logging ---
LOG_LEVEL=INFO

# --- Queue / Cache ---
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1
